{
  "manifest_version": 2,
  "name": "Tools for Chrome",
  "short_name": "Tools for Chrome",
  "version": "2020.01.10",
  "description": "Tools to make using chrome better.",
  "permissions": ["bookmarks", "management", "storage", "tabs", "topSites"],
  "options_page": "options.html",
  "background": {"page": "background.html"},
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "img/notebook128.png",
      "64": "img/notebook64.png",
      "32": "img/notebook32.png"
    }
  },
  "incognito": "split",
  "minimum_chrome_version" : "22"
}
